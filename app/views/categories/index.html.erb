<% content_for(:title, 'Catégories') %>

<h1> Les categories</h1>
<table class="table">
  <thead>
    <tr>
      <td>ID</td>
      <td>Nom</td>
      <td>Nbr de produit</td>
      <td>Nom des produits</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.products_count %></td>
        <td> <% category.products.each do |product| %><%= product.name %> | <% end %></td>
        <td>
          <%= link_to "Éditer", edit_category_path(category.id), class: "btn btn-primary" %>
          <%= link_to "Supprimer", category_path(category.id), class: "btn btn-danger", method: 'DELETE', :'data-confirm' => 'Êtes-vous sûr ?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nouvelle categorie", new_category_path, class: "btn btn-default" %>
